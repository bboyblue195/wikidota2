<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.example.bboyb.demogd2.SkillInfo">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:padding="10dp">

        <TextView
            android:text="Tên hero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvNameHeroesInfoInSkill"
            android:gravity="center"
            android:textSize="24sp"
            android:textColor="@android:color/holo_orange_light"
            android:textStyle="bold" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <ImageView
                    android:layout_width="100dp"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/ivHeroesInfoInSkill"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                android:layout_height="80dp"
                android:layout_weight="0.07" />

            <TextView
                    android:text="Skill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="normal|bold"
                android:gravity="fill"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:textAllCaps="false" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_background"
                android:layout_weight="0.07"
                android:padding="10dp"
                android:layout_marginTop="5dp">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                    android:layout_weight="0.07">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/strength"
                            android:id="@+id/ivSkill1"
                            android:scaleType="fitXY" />

                        <TextView
                            android:text="tên skill"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvNameSkill1"
                            android:layout_gravity="center"
                            android:textStyle="bold|italic"
                            android:layout_weight="0.11"
                            android:layout_width="wrap_content"
                            android:textSize="14sp"
                            android:layout_marginLeft="10dp" />

                </LinearLayout>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvContentSkill1"
                    android:layout_weight="0.07" />

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_background"
                android:layout_weight="0.07"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.07"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/strength"
                        android:id="@+id/ivSkill2"
                        android:scaleType="fitXY" />

                    <TextView
                        android:text="tên skill"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvNameSkill2"
                        android:layout_gravity="center"
                        android:textStyle="bold|italic"
                        android:layout_weight="0.11"
                        android:layout_width="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp" />

                </LinearLayout>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvContentSkill2"
                    android:layout_weight="0.07" />

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_background"
                android:layout_weight="0.07"
                android:padding="10dp"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.07">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/strength"
                        android:id="@+id/ivSkill3"
                        android:scaleType="fitXY" />

                    <TextView
                        android:text="tên skill"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvNameSkill3"
                        android:layout_gravity="center"
                        android:textStyle="bold|italic"
                        android:layout_weight="0.11"
                        android:layout_width="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp" />

                </LinearLayout>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvContentSkill3"
                    android:layout_weight="0.07" />

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_background"
                android:layout_weight="0.07"
                android:padding="10dp"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.07">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/strength"
                        android:id="@+id/ivSkill4"
                        android:scaleType="fitXY" />

                    <TextView
                        android:text="tên skill"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvNameSkill4"
                        android:layout_gravity="center"
                        android:textStyle="bold|italic"
                        android:layout_weight="0.11"
                        android:layout_width="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp" />

                </LinearLayout>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvContentSkill4"
                    android:layout_weight="0.07" />

            </LinearLayout>

        </LinearLayout>

        </ScrollView>


    </LinearLayout>
</FrameLayout>
